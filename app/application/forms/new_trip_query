# frozen_string_literal: true

require 'dry-validation'

module ComfyWings
  module Forms
    # From Object for Trip Query from frontend user
    class NewTripQuery < Dry::Validation::Contract
      params do
        required(:remote_url).filled(:string)
        required(:remote_url).filled(:string)
        required(:remote_url).filled(:string)
        required(:remote_url).filled(:string)
      end

      rule(:remote_url) do
        unless URL_REGEX.match?(value)
          key.failure('is an invalid address for a Github project')
        end
      end
    end
  end
end
